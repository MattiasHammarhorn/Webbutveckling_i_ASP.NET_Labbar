@using GroupAssignment_3.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PeopleEditVM
<!DOCTYPE html>
<html>
<head>
    <title>People Edit</title>
</head>
<body>
    <h1>People Edit</h1>
    <form asp-action="edit" asp-controller="people">
        <label asp-for="Name"></label>
        <br>
        <input asp-for="Name" placeholder="Name">
        <span asp-validation-for="Name"></span>
        <br>
        <label asp-for="Email"></label>
        <br>
        <span asp-validation-for="Email" placeholder="Email"></span>
        <input asp-for="Email">
        <br>
        <input type="submit" value="Create Person">
    </form>
</body>
</html>