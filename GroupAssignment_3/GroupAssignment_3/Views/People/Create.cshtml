@using GroupAssignment_3.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PeopleCreateVM
<!DOCTYPE html>
<html>
<head>
    <title>People Create</title>
</head>
<body>
    <h1>People Create</h1>
    <form asp-action="create" asp-controller="people">
        <label asp-for="Name"></label>
        <br>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
        <br>
        <label asp-for="Email"></label>
        <br>
        <span asp-validation-for="Email"></span>
        <input asp-for="Email">
        <br>
        <label asp-for="AcceptTerms"></label>
        <input asp-for="AcceptTerms">
        <span asp-validation-for="AcceptTerms"></span>
        <br>
        <input type="submit" value="Create Person">
    </form>
</body>
</html>